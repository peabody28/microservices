{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "web",
            "program": "app.js",
            "request": "launch",
            "cwd": "${workspaceFolder}/web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/${input:projectName}/bin/Debug/net6.0/${input:projectName}.dll",
            "args": [],
            "cwd": "${workspaceFolder}/${input:projectName}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
        },
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "projectName",
          "description": "What project yoy want to start?",
          "options": [
            "auth",
            "wallet",
            "risk.score",
            "payment",
            "user"
          ],
          "default": "user"
        },
    ]
}